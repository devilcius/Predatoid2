<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="predatum_username"
        android:title="@string/pref_predatum_login_username"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="predatum_password"
        android:title="@string/pref_predatum_login_password"
        android:inputType="textPassword"
        />
    <CheckBoxPreference
        android:key="predatum_remember_me"
        android:title="@string/pref_title_remember_me"
        android:defaultValue="true" />
</PreferenceScreen>
